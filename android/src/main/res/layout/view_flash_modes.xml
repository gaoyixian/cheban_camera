<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:gravity="center"
    android:paddingStart="21dp"
    android:paddingEnd="12dp"
    android:background="@drawable/shape_flash_modes_bg"
    >
    <ImageView
        android:id="@+id/iv_flash_off"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@mipmap/flash_off"
        />
    <ImageView
        android:id="@+id/iv_flash_auto"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@mipmap/flash_auto"
        android:layout_marginStart="36dp"
        />
    <ImageView
        android:id="@+id/iv_flash_on"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@mipmap/flash_on"
        android:layout_marginStart="36dp"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="37.5dp"
        android:background="#ffffff"
        android:layout_marginStart="33.5dp"
        />
    <ImageView
        android:id="@+id/iv_flash_switch"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@mipmap/flash_off"
        android:layout_marginStart="18.5dp"
        />
</LinearLayout>